{
  "name": "fiddly",
  "description": "Create beautiful and simple HTML pages from your Readme.md files",
  "version": "0.3.0",
  "bin": {
    "fiddly": "bin/fiddly.js"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.js\"",
    "lint": "eslint . --cache --fix",
    "pretest": "npm run lint",
    "test": "jest",
    "posttest": "npm run format",
    "watch": "jest --watch",
    "coverage": "jest --coverage",
    "build": "./bin/fiddly.js",
    "prepublish": "npm run test"
  },
  "files": [
    "LICENSE",
    "Readme.md",
    "bin",
    "src"
  ],
  "keywords": [
    "generation",
    "markdown",
    "static",
    "sites",
    "fiddly"
  ],
  "author": {
    "name": "Sara Vieira",
    "email": "hey@iamsaravieira.com",
    "url": "https://iamsaravieira.com/"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "license": "MIT",
  "dependencies": {
    "clean-css": "^4.2.1",
    "create-html": "^4.1.0",
    "gluegun": "2.0.3",
    "showdown": "^1.9.0",
    "showdown-footnotes": "^2.1.2",
    "to-css": "^1.2.1"
  },
  "devDependencies": {
    "eslint": "^5.11.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^23.6.0",
    "prettier": "^1.15.3"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "homepage": "https://github.com/SaraVieira/fiddly",
  "bugs": {
    "url": "https://github.com/SaraVieira/fiddly/issues",
    "email": "hey@iamsaravieira.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SaraVieira/fiddly"
  }
}
